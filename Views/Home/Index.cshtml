@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome and Choose Your Movie!</h1>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/Home/Idaho_Temple.jpg" data-color="lightblue" alt="Idaho Falls Temple">
            <div class="carousel-caption d-md-block">
                <h3>Idaho Falls Temple</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Home/Recife_Temple.jpg" data-color="firebrick" alt="Brazil Recife Temple">
            <div class="carousel-caption d-md-block">
                <h3>Brazil Recife Temple</h3>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/Home/SanDiego_Temple.jpg" data-color="violet" alt="San Diego Temple">
            <div class="carousel-caption d-md-block">
                <h3>San Diego Temple</h3>
            </div>
        </div>
    </div>

    <!-- Controls -->
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



